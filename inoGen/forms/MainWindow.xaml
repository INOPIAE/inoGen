<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="inoGen" Height="650" Width="1100">


    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="_Datei">
                <MenuItem Header="_Neu" Click="New_Click"/>
                <MenuItem Header="_Öffnen" Click="Open_Click"/>
                <Separator/>
                <MenuItem Header="Zuletzt geöffnet" x:Name="RecentFilesMenu"/>
                <Separator/>
                <MenuItem Header="_Beenden" Click="Quit_Click"/>
            </MenuItem>
            <MenuItem Header="_Basisdaten">
                <MenuItem Header="_Person" Click="Person_Click"/>
                <MenuItem Header="_Familie" Click="Familie_Click"/>
                <MenuItem Header="_VK Heirat KB" Click="VKH_Click"/>
            </MenuItem>
            <MenuItem Header="_Definitionen">
                <MenuItem Header="_Orte" Click="Orte_Click"/>
                <MenuItem Header="_Kreise" Click="Kreise_Click"/>
                <MenuItem Header="_Konfession" Click="Konfession_Click"/>
                <MenuItem Header="_Ereignisart" Click="Ereignisart_Click"/>
            </MenuItem>
            <MenuItem Header="_Ausgabe">
                <MenuItem Header="_Ahnentafel" Click="Ahnentafel_Click"/>
                <MenuItem Header="_Personenreport" Click="PersonReport_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Franz Kalender" Click="FranzKalender_Click"/>
                <MenuItem Header="_Optionen" Click="Options_Click"/>
            </MenuItem>
            <MenuItem Header="_?">
                <MenuItem Header="_Info" Click="Info_Click"/>
            </MenuItem>
        </Menu>
        
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="DBText" Text="DB:" />
            </StatusBarItem>   
             <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Bereit" />
            </StatusBarItem>
        </StatusBar>
        
        <ContentControl x:Name="MainContent"/>
       
    </DockPanel>
</Window>
