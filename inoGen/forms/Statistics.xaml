<Window x:Class="Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inoGen"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10">

            <!-- Close Button unten rechts -->
            <Button Content="Schließen" Width="80" Height="30" DockPanel.Dock="Bottom"
                HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="CloseButton_Click"/>

            <!-- TabControl oben -->
            <TabControl>
                <!-- Tab 1 -->
                <TabItem Header="Allgemeines">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Labels pro Zeile -->
                        <Label Grid.Row="0" Content="Label 1" Name="A1"/>
                        <Label Grid.Row="1" Content="Label 2" Name="A2"/>
                        <Label Grid.Row="2" Content="Label 3" Name="A3"/>
                        <Label Grid.Row="3" Content="Label 4" Name="A4"/>
                        <Label Grid.Row="4" Content="Label 5" Name="A5"/>
                    </Grid>
                </TabItem>

                <!-- Tab 2 -->
                <TabItem Header="VK Taufen">
                    <TextBlock Text="Inhalt Tab 2" Margin="10"/>
                </TabItem>

                <!-- Tab 3 -->
                <TabItem Header="VK Heiraten">
                    <Grid Margin="10">

                        <!-- Hauptspalten -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Hauptzeilen -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ================= LABEL-SPALTE ================= -->
                        <Grid Grid.Column="0" Grid.RowSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Label 1" Name="H1"/>
                            <Label Grid.Row="1" Content="Label 2" Name="H2"/>
                            <Label Grid.Row="2" Content="Label 3" Name="H3"/>
                            <Label Grid.Row="3" Content="Label 4" Name="H4"/>
                            <Label Grid.Row="4" Content="Label 5" Name="H5"/>
                            <Label Grid.Row="5" Content="Label 6" Name="H6"/>
                            <Label Grid.Row="6" Content="Label 7" Name="H7"/>
                            <Label Grid.Row="7" Content="Label 8" Name="H8"/>
                            <Label Grid.Row="8" Content="Label 9" Name="H9"/>
                        </Grid>

                        <!-- ================= LINKES DATAGRID ================= -->
                        <Grid Grid.Column="1" Grid.RowSpan="2" Margin="5">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Überschrift -->
                            <TextBlock Grid.Row="0"
                       Text="Jahre"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="5"/>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="1"
                      Name="dgVKHYears"
                      AutoGenerateColumns="True"/>

                            <!-- Fußzeile -->
                            <TextBlock Grid.Row="2"
                       Name="txtYearsCount"
                       Text="Zeilen: 0"
                       HorizontalAlignment="Right"
                       Margin="5"/>
                        </Grid>

                        <!-- ================= RECHTES DATAGRID ================= -->
                        <Grid Grid.Column="2" Grid.RowSpan="2" Margin="5">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Überschrift -->
                            <TextBlock Grid.Row="0"
                       Text="Seiten"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="5"/>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="1"
                      Name="dgVKHPages"
                      AutoGenerateColumns="True"/>

                            <!-- Fußzeile -->
                            <TextBlock Grid.Row="2"
                       Name="txtPagesCount"
                       Text="Zeilen: 0"
                       HorizontalAlignment="Right"
                       Margin="5"/>
                        </Grid>

                    </Grid>
                </TabItem>


                <!-- Tab 4 -->
                <TabItem Header="VK Beerdigungen">
                    <TextBlock Text="Inhalt Tab 4" Margin="10"/>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
