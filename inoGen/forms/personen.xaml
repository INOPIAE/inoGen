<UserControl x:Class="personen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inoGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Personen"
                   FontSize="18"
                   FontWeight="Bold"
                   DockPanel.Dock="Top"
                   Margin="0 0 0 10" />
            <DataGrid x:Name="dgPersonen"
                  DockPanel.Dock="Left"
                  Width="300"
                  AutoGenerateColumns="True"
                  AutoGeneratedColumns="dgPersonen_AutoGeneratedColumns"
                  Margin="0 0 10 0"
                  MouseDoubleClick="dgPersonen_MouseDoubleClick" />
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <Button x:Name="btnFamile" Content="Familie" Width="60" Margin="0 0 5 0" Click="btnFamile_Click"/>
                    <Button x:Name="btnVater" Content="Vater" Width="60" Margin="0 0 5 0" Click="btnVater_Click"/>
                    <Button x:Name="btnMutter" Content="Mutter" Width="60" Margin="0 0 5 0" Click="btnMutter_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="PS:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPS" Width="200" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Vornamen:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtVorname" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Nachname:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNachname" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Konfession:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbKonfession"
                      Width="200"
                      DisplayMemberPath="Konfessionkurz"
                      SelectedValuePath="tblKonfessionID"
                      SelectionChanged="cbKonfession_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Geschlecht:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbSex" Width="100" SelectedIndex="0">
                        <ComboBoxItem Content=" " />
                        <ComboBoxItem Content="m" />
                        <ComboBoxItem Content="w" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Info:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtInfo" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Familysearch ID:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtFSID" Width="100"/>
                </StackPanel>
                <Button x:Name="btnSave" Content="Speichern" Width="100" Margin="0 10 0 0" HorizontalAlignment="Center"/>
                <Button x:Name="btnNew" Content="Neu" Width="100" Margin="0 10 0 10" Click="btnNew_Click"/>

                <DataGrid x:Name="dgEreignis"
                  DockPanel.Dock="Left"
                  Width="300"
                  AutoGenerateColumns="True"
                  AutoGeneratedColumns="dgEreignis_AutoGeneratedColumns"
                  Margin="0 0 10 0"
                  MouseDoubleClick="dgEreignis_MouseDoubleClick" Height="150" />
                <Button x:Name="btnNewEvent" Content="Neue Ereignis" Width="100" Margin="0 10 0 0" Click="btnNewEvent_Click"/>
            </StackPanel>
            <ContentControl x:Name="AdditionalContent" />
        </DockPanel>
    </Grid>
</UserControl>
