<Window x:Class="FranzKalender"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datumskonverter" Height="250" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Linke Spalte -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Gregorianisches Datum" FontWeight="Bold" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpGregorian" Margin="0,0,0,10"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" >
                <Button Content="Franz. Datum" Width="100" Click="BtnGregConvert_Click"/>
                <Button Content="Julianisch" Width="100" Click="BtnGtJConvert_Click"/>
                <Button Content="Kopieren" Width="100" Click="BtnGregCopy_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Rechte Spalte -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Französischer Revolutionskalender" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock Text="Jahr" Width="50" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbYear" Width="120" Margin="0,0,0,5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock Text="Monat" Width="50" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbMonth" Width="120" DisplayMemberPath="Value" Margin="0,0,0,5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock Text="Tag" Width="50" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbDay" Width="120" Margin="0,0,0,10" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <Button Content="Konvertieren" Width="100" Click="BtnAltConvert_Click"/>
                <Button Content="Kopieren" Width="100" Click="BtnAltCopy_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock x:Name="fInfo" Text="Tag" Width="200" Margin="0,0,0,5"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="10">
            <TextBlock Text="Julianisches Datum" FontWeight="Bold" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpJulian" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <Button Content="Konvertieren" Width="100" Click="BtnJulianConvert_Click"/>
                <Button Content="Kopieren" Width="100" Click="BtnJulianCopy_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Schließen-Button unten -->
        <Button Grid.Row="1" Grid.ColumnSpan="2"
                Content="Schließen"
                HorizontalAlignment="Right" Width="100" Margin="0,10,0,0"
                Click="BtnClose_Click"/>
    </Grid>

</Window>
