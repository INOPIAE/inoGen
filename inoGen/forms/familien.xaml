<UserControl x:Class="familien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inoGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Familien"
                   FontSize="18"
                   FontWeight="Bold"
                   DockPanel.Dock="Top"
                   Margin="0 0 0 10" />
            <DataGrid x:Name="dgFamilien"
                  DockPanel.Dock="Left"
                  Width="300"
                  AutoGenerateColumns="True"
                  AutoGeneratedColumns="dgFamilien_AutoGeneratedColumns"
                  Margin="0 0 10 0"
                  MouseDoubleClick="dgFamilien_MouseDoubleClick" />
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="FS:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtFS" Width="200" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Vater:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtVater" Width="200"/>
                    <Button x:Name="btnV" Content="..." Width="20" Margin="5 0 0 0" Click="btnV_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Mutter:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtMutter" Width="200"/>
                    <Button x:Name="btnM" Content="..." Width="20" Margin="5 0 0 0" Click="btnM_Click"/>
                </StackPanel>
                <Button x:Name="btnSave" Content="Speichern" Width="100" Margin="0 10 0 0" HorizontalAlignment="Center"/>                
                <Button x:Name="btnNew" Content="Neu" Width="100" Margin="0 10 0 10" Click="btnNew_Click"/>

                <DataGrid x:Name="dgEreignis"
                  DockPanel.Dock="Left"
                  Width="300"
                  AutoGenerateColumns="True"
                  AutoGeneratedColumns="dgEreignis_AutoGeneratedColumns"
                  Margin="0 0 10 0"
                  MouseDoubleClick="dgEreignis_MouseDoubleClick" Height="100" />
                <Button x:Name="btnNewEvent" Content="Neue Ereignis" Width="100" Margin="0 10 0 10" Click="btnNewEvent_Click"/>
                <DataGrid x:Name="dgPersonen"
                  DockPanel.Dock="Left"
                  Width="300"
                  AutoGenerateColumns="True"
                  AutoGeneratedColumns="dgPersonen_AutoGeneratedColumns"
                  Margin="0 0 10 0"
                  MouseDoubleClick="dgPersonen_MouseDoubleClick" Height="130">
                    <DataGrid.Resources>
                        <ContextMenu x:Key="RowContextMenu">
                            <MenuItem Header="Eintrag Öffnen" Click="CMenuItemOpen_Click"/>
                            <MenuItem Header="Eintrag Löschen" Click="CMenuItemDelete_Click"/>
                        </ContextMenu>

                        <Style TargetType="DataGridRow">
                            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
                <Button x:Name="btnNewChild" Content="Neues Kind" Width="100" Margin="0 10 0 0" Click="btnNewChild_Click"/>
            </StackPanel>
            <ContentControl x:Name="AdditionalContent" />
        </DockPanel>
    </Grid>
</UserControl>
