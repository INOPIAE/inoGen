<Window x:Class="AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Über inoGen" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Source="pack://siteoforigin:,,,/assets/ms-icon-144x144.png"
               Height="100" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Infos -->
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="inoGen" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtVersion" Text="Version 1.0.0" Margin="0,5,0,0" HorizontalAlignment="Center"/>
            <TextBlock Text="© 2025 INOPIAE GbR" HorizontalAlignment="Center"/>
            <TextBlock Text="Programm zur Verwaltung von genealogischen Daten"
                       Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" Width="400"/>
            <Button Content="Rechtliches" Width="80" Height="30" Margin="0,10,0,0"
        HorizontalAlignment="Center" IsDefault="True" Click="Legal_Click"/>
        </StackPanel>

        <!-- Schließen-Button -->
        <Button Content="OK" Grid.Row="2" Width="80" Height="30" Margin="0,10,0,0"
                HorizontalAlignment="Center" IsDefault="True" Click="Ok_Click"/>
    </Grid>
</Window>

