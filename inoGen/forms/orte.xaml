<UserControl x:Class="orte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inoGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Orte"
             FontSize="18"
             FontWeight="Bold"
             DockPanel.Dock="Top"
             Margin="0 0 0 10" />
            <DataGrid x:Name="dgOrte"
            DockPanel.Dock="Left"
            Width="200"
            AutoGenerateColumns="True"
            AutoGeneratedColumns="dgOrte_AutoGeneratedColumns"
            Margin="0 0 10 0"
            MouseDoubleClick="dgOrte_MouseDoubleClick" />
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Ort:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtOrt" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Kreis:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbKreis"
                      Width="200"
                      DisplayMemberPath="Kreis"
                      SelectedValuePath="tblKreisID"
                      SelectionChanged="cbKreis_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Info:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtInfo" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Breite:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLat" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Länge:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLon" Width="200"/>
                </StackPanel>
                <Button x:Name="btnGeo" Content="Geo" Width="100" Margin="0 10 0 0" Click="btnGeo_Click"/>
                <Button x:Name="btnNew" Content="Neu" Width="100" Margin="0 10 0 0" Click="btnNew_Click"/>
                <Button x:Name="btnSave" Content="Speichern" Width="100" Margin="0 10 0 0" HorizontalAlignment="Center"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
