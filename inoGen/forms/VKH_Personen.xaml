<Window x:Class="VKH_Personen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inoGen"
        mc:Ignorable="d"
        Title="VKH_Personen" Height="450" Width="800">
    <DockPanel Margin="10">

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="RowCountText" Text="Zeilen: 0"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Kopfzeile -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Nachname:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtNachname" Width="150" Margin="5,0,20,0"/>

            <Label Content="Personenart:" VerticalAlignment="Center"/>
            <ComboBox x:Name="FilterPerson" Width="150" Margin="5,0,0,0">
            </ComboBox>
        </StackPanel>

        <!-- Tabelle -->
        <DataGrid x:Name="DataGridPersonen" AutoGenerateColumns="True" />

    </DockPanel>
</Window>
