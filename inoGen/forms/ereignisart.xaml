<UserControl x:Class="ereignisart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inoGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Ereignisart"
            FontSize="18"
            FontWeight="Bold"
            DockPanel.Dock="Top"
            Margin="0 0 0 10" />
            <DataGrid x:Name="dgEreignisArt"
           DockPanel.Dock="Left"
           Width="200"
           AutoGenerateColumns="True"
           AutoGeneratedColumns="dgEreignisArt_AutoGeneratedColumns"
           Margin="0 0 10 0"
           MouseDoubleClick="dgEreignisArt_MouseDoubleClick" />
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Ereignis:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEreignis" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Zeichen:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtZeichen" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Reihenfolge:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtReihenfolge" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Personenereignis:" Width="100" VerticalAlignment="Center"/>
                    <CheckBox  x:Name="ckbPerson" Margin="0,0,10,0"/>
                </StackPanel>
                <Button x:Name="btnNew" Content="Neu" Width="100" Margin="0 10 0 0" Click="btnNew_Click"/>
                <Button x:Name="btnSave" Content="Speichern" Width="100" Margin="0 10 0 0" HorizontalAlignment="Center"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
